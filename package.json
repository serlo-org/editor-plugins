{
  "name": "@serlo-org/ory-editor-plugins-workspace",
  "workspaces": [
    "config",
    "htmlRenderer",
    "plugins/*"
  ],
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "@splish-me/editor-core": "^0.0.4",
    "@splish-me/editor-ui": "^0.0.3",
    "@splish-me/ory-editor-core": "^0.0.5",
    "emotion": "^9.2.10",
    "font-awesome": "^4.7.0",
    "react-emotion": "^9.2.10",
    "taskbook": "^0.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@storybook/addon-links": "^3.4.11",
    "@storybook/addon-options": "^3.4.11",
    "@storybook/addons": "^3.4.11",
    "@storybook/react": "^3.4.11",
    "@types/jest": "^23.3.5",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "babel-runtime": "^6.26.0",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "lerna": "^2.10.1",
    "lint-staged": "^7.3.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "rimraf": "^2.6.2",
    "typescript": "^3.0.3"
  },
  "scripts": {
    "precommit": "lint-staged",
    "build": "lerna run --parallel build",
    "build:watch": "lerna run --parallel build:watch",
    "format": "prettier --single-quote --no-semi --write \"{{plugins/**/src/**,.storybook/**,example}/*,*}.{ts,tsx,js,jsx,json,md,css}\"",
    "start": "npm-run-all storybook",
    "storybook": "start-storybook -p 9009 -s ./.storybook/public",
    "build-storybook": "build-storybook",
    "test": "jest"
  },
  "private": true,
  "lint-staged": {
    "{{plugins/**/src/**,.storybook/**,example}/*,*}.{ts,tsx,js,jsx,json,md,css}": [
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(tsx?|js)$": "babel-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.+(ts?(x)|js)"
    ]
  }
}
